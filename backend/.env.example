# Server
PORT=3000
NODE_ENV=production

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/elemental_portal?schema=public"

# Storage Provider (cloudinary, r2, or s3)
STORAGE_PROVIDER=cloudinary

# Cloudinary (рекомендуется)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_FOLDER=elemental-portal

# Cloudflare R2 (альтернатива)
# R2_ACCOUNT_ID=your_account_id
# R2_ACCESS_KEY_ID=your_access_key
# R2_SECRET_ACCESS_KEY=your_secret_key
# R2_BUCKET_NAME=your_bucket_name
# R2_PUBLIC_URL=https://your-bucket.r2.dev

# AWS S3 (для будущей миграции)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# S3_BUCKET_NAME=your_bucket_name

# CORS
FRONTEND_URL=https://your-frontend-domain.com
