{
  "manifest_version": 3,
  "name": "Elemental Content Creation Portal",
  "version": "1.0.0",
  "description": "Integration with Haygen AI Content Creator for Elemental Content Creation Portal",
  "permissions": [
    "storage",
    "tabs",
    "clipboardWrite",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.haygen.com/*",
    "https://app.heygen.com/*",
    "http://localhost:*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "src/background/index.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.haygen.com/*", "https://app.heygen.com/*"],
      "js": [
        "src/content/notification-manager.js",
        "src/content/haygen-prompt-filler.js",
        "src/content/haygen-asset-loader.js",
        "src/content/haygen-result-monitor.js",
        "src/content/haygen.js"
      ],
      "type": "module",
      "run_at": "document_idle"
    },
    {
      "matches": ["http://localhost:*/*", "https://*/*"],
      "js": ["src/content/portal.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://*/*"
    ]
  }
}

